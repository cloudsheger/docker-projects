pipeline {
    agent any

    tools {
        jfrog 'jfrog'
        maven 'Maven 3.8.3'
        jdk 'jdk8'
        //docker 'docker' // Assuming 'docker' is the tool name for Docker in your Jenkins configuration
    }
    environment {
        DOCKER_IMAGE_NAME = "hggosa.jfrog.io/docker/demo-java-app:2.0.0"
        ARTIFACTORY_ACCESS_TOKEN = 'JFROG-API-TOKEN'
        ARTIFACTORY_REPO_NAME = "hggosa.jfrog.io"

    }

    stages {
        stage('Build') {
            steps {
                script {
                    dir('java-app') {
                        // Corrected the command to use the 'maven' tool
                        sh 'mvn clean install'
                    }
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    dir('java-app') {
                        sh 'mvn test'
                    }
                }
            }
        }
        stage('Build Docker image') {
            steps {
                script {
                    dir('java-app') {
                        // Use the 'docker' tool to build the Docker image
                        sh "docker build -t $DOCKER_IMAGE_NAME ."
                    }
                }
            }
        }
        stage('Scan and push image') {
            steps {
                script {
                    dir('java-app') {
                         
                        echo "Building Docker image..."
                        // Use Docker Pipeline plugin to authenticate with Docker registry
                        docker.withRegistry("https://${ARTIFACTORY_REPO_NAME}", ARTIFACTORY_ACCESS_TOKEN) {
                             //sh "docker build -f docker/Dockerfile -t $DOCKER_IMAGE_NAME ."
                             sh "docker push $DOCKER_IMAGE_NAME"
                        }
                    }
                }
            }
        }
    }
}
